      gap: 16px;
      max-width: 900px;
      margin: 0 auto;
    }

    .product {
      background: #fff;
      border: 1px solid #ddd;
      border-radius: 8px;
      padding: 16px;
      text-align: center;
      box-shadow: 0 4px 6px rgba(0,0,0,0.05);
    }

    .product h3 {
      margin: 0 0 10px;
